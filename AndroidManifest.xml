<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.god.attendence"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <application
        android:name="com.g.o.d.shalzz.attendance.MyVolley"
        android:allowBackup="false"
        android:allowClearUserData="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.g.o.d.shalzz.attendance.Splash"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.g.o.d.shalzz.attendance.Login"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:label="Login" >
            <intent-filter>
                <action android:name="com.god.attendence.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.g.o.d.shalzz.attendance.Attendance"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.god.attendence.DISPLAYATTEN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
